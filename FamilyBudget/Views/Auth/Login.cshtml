@{
    Layout = null;
}
<!DOCTYPE html>
@using FamilyBudget.Models
@model User
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/app/libs/bootstrap/css/bootstrap-paper.css" rel="stylesheet" />
    <link href="~/app/src/common/css/fonts.css" rel="stylesheet" />
    <link href="~/app/src/common/css/controls.css" rel="stylesheet" />
    <link href="~/Content/Styles/login-page.css" rel="stylesheet" />
</head>
<body>

<div class="layout">
    <div class="login-wrap">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Error!</strong> @ViewBag.ErrorMessage
            </div>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <fieldset>
                    <legend>Authorization</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-xs-3" })
                        <div class="col-xs-9">
                            @Html.TextBoxFor(model => model.Login, new { @class = "form-control col-xs-9" })
                            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-xs-3 control-label">Password</label>
                        <div class="col-xs-9">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(model => model.IsRemember) Remember me
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">
                        <button class="btn btn-primary pull-right">Sign In</button>
                    </div>
                    <p class="text-center">
                        Don't have an account?
                        @Html.ActionLink("Register now!", "registration")
                    </p>
                </fieldset>
            </div>
        }
    </div>
</div>
    <script src="~/app/libs/jQuery/jquery-2.1.4.min.js"></script>
    <script src="~/app/libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/app/libs/jQuery/jquery.validate.min.js"></script>
    <script src="~/app/libs/jQuery/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
