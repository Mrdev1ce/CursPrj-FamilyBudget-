@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/app/libs/bootstrap/css/bootstrap-paper.css" rel="stylesheet" />
    <link href="~/app/src/common/css/fonts.css" rel="stylesheet" />
    <link href="~/app/src/common/css/controls.css" rel="stylesheet" />
    <link href="~/app/src/common/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="layout">
        <div class="left-menu">
            <div class="user-card">
                <img src="~/app/src/common/img/ginger-beard-guy.jpg" class="user-avatar" />
                <div class="user-login">
                    mylogin@epam.com
                </div>
            </div>
            <nav class="nav-panel">
                <a href="#" class="nav-item">Home</a>
                <a href="#" class="nav-item">Accounts</a>
                <a href="#" class="nav-item">One more item</a>
            </nav>
        </div>
        <main class="main">
            <header class="header">
                <span class="title">Home</span>
            </header>
            <div id="content" class="content">
                <div class="login-wrap">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <strong>Error!</strong> @ViewBag.ErrorMessage
                                </div>
                            }
                            <fieldset>
                                <legend>Autorization</legend>
                                <div class="form-group">
                                    <label for="inputLogin" class="col-xs-3 control-label">Login</label>
                                    <div class="col-xs-9">
                                        <input type="text" name="userLogin" class="form-control" id="inputLogin" placeholder="Login">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-xs-3 control-label">Password</label>
                                    <div class="col-xs-9">
                                        <input type="password" name="userPassword" class="form-control" id="inputPassword" placeholder="Password">
                                        <div class="checkbox">
                                            <label>
                                                <input name="isRemember" type="checkbox"> Remember me
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix">
                                    <button class="btn btn-primary pull-right">Sign In</button>
                                </div>
                                <p class="text-center">
                                    Don't have an account?
                                    <a href="#">Registrer now!</a>
                                </p>
                            </fieldset>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>
</body>
</html>
