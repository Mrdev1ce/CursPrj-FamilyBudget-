@{
    Layout = null;
}
@using FamilyBudget.Models
@model User
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/app/libs/bootstrap/css/bootstrap-paper.css" rel="stylesheet" />
    <link href="~/app/src/common/css/fonts.css" rel="stylesheet" />
    <link href="~/app/src/common/css/controls.css" rel="stylesheet" />
    <link href="~/Content/Styles/login-page.css" rel="stylesheet" />
</head>
<body>

    <div class="layout">
        <div class="login-wrap">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <strong>Error!</strong> @ViewBag.ErrorMessage
                </div>
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <fieldset>
                        <legend>Registration</legend>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Login, htmlAttributes: new {@class = "control-label col-xs-3"})
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Login, new { @class = "form-control col-xs-9" })
                                @Html.ValidationMessageFor(model => model.Login, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-xs-3" })
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix">
                            <button class="btn btn-primary pull-right">Register</button>
                        </div>
                        <p class="text-center">
                            Already have an account?
                            @Html.ActionLink("Sign In!", "login")
                        </p>
                    </fieldset>
                </div>
            }
        </div>
    </div>
    <script src="~/app/libs/jQuery/jquery-2.1.4.min.js"></script>
    <script src="~/app/libs/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/app/libs/jQuery/jquery.validate.min.js"></script>
    <script src="~/app/libs/jQuery/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
